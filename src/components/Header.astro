---
const data = Astro.locals;
const { session } = data;
---
<header class="flex justify-between items-center mb-6">
  <nav class="text-xl font-bold flex flex-row gap-4">
    <a href="/">Home</a>
    <a href="/manual">How to play</a>
    {session !== null && !session?.error ? (<a href="/inventory">Inventory</a>) : ""}
  </nav>

  <div>
      {
			session !== null && !session?.error ? (
      <meta id="username" data-session-username={session?.user?.name} />
        <button id="logout" class="text-white bg-violet-600 text-xl py-2 px-4 rounded-lg">Log out {session.user.name}</button>
			) : (
				<button id="login" class="text-white bg-violet-600 text-2l py-2 px-4 rounded-lg">Log in with Twitch</button>
			)
    }
    </div>
  </header>

<script>
  const { signIn, signOut } = await import("auth-astro/client");

  const username = document.querySelector("#username");

  if (username === null) {
    const loginButton: HTMLElement = document.querySelector("#login")
    loginButton.onclick = () => signIn("twitch");
  } else {
    const logoutButton: HTMLElement = document.querySelector("#logout")
    logoutButton.onclick = () => signOut();
  }
</script>