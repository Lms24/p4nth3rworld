		<h2>{data.inventory.total} items</h2>
		<table>
			<thead>
				<th>Item</th>
				<th>Count</th>
				<th>Rarity</th>
			</thead>
			<tbody>
				{data.inventory.items?.map(item => <tr><td>{item.name}</td><td>{item.count}</td><td>{item.rarity}</td></tr>)}
			</tbody>
		</table>
</Layout>
